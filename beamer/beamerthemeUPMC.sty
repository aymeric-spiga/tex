\ProvidesPackage{beamerthemeUPMC}
\RequirePackage{beamerthemeMadrid}

%%%
%%% COULEURS UPMC
%%%
\definecolor{orangeUPMC}{RGB}{224,82,6}
\definecolor{UPMC}{RGB}{145,120,91}
\definecolor{redUPMC}{RGB}{181,56,79}
\definecolor{greenUPMC}{RGB}{144,152,107}

%%% PREPARATION POUR DARK SLIDES or anything similar
%%% ... only the first line if one wants to keep theme layout
\newcommand{\allcolorsblack}{
\setbeamercolor{normal text}{bg=black} 
\setbeamercolor{frametitle}{bg=black}
\setbeamercolor{author in head/foot}{bg=black,fg=black!85!white}
\setbeamercolor{title in head/foot}{bg=black,fg=black!85!white}
\setbeamercolor{institute in head/foot}{bg=black,fg=black!85!white}
\setbeamercolor{date in head/foot}{bg=black,fg=black!85!white}
}
\newcommand{\allcolorswhite}{
\setbeamercolor{normal text}{bg=white} 
\setbeamercolor{frametitle}{bg=white}
\setbeamercolor{author in head/foot}{bg=white,fg=black!35!white}
\setbeamercolor{title in head/foot}{bg=white,fg=black!35!white}
\setbeamercolor{institute in head/foot}{bg=white,fg=black!35!white}
\setbeamercolor{date in head/foot}{bg=white,fg=black!35!white}
}
\allcolorswhite

\setbeamercolor{titlelike}{bg=UPMC,fg=white}
\setbeamercolor{frametitle}{fg=orangeUPMC,bg=white}
\setbeamercolor{framesubtitle}{parent=frametitle}

\setbeamercolor*{normal text}{fg=UPMC}
\setbeamercolor*{alerted text}{fg=redUPMC}
\setbeamercolor*{example text}{fg=greenUPMC}

\setbeamercolor{item projected}{bg=orangeUPMC,fg=white}
\setbeamercolor{section in toc}{fg=orangeUPMC}
\setbeamercolor{subsection in toc}{fg=UPMC}

%\setbeamerfont{block title}{size={}}
\setbeamercolor*{block title}{bg=greenUPMC,fg=white}
\setbeamercolor*{block body}{bg=greenUPMC!15!white,fg=black}
\setbeamercolor*{block title alerted}{bg=redUPMC,fg=white}
\setbeamercolor*{block body alerted}{bg=redUPMC!15!white,fg=black}
\setbeamercolor*{block title example}{bg=UPMC,fg=white}
\setbeamercolor*{block body example}{bg=UPMC!15!white,fg=black}

\newcommand{\changetext}[1]{\textcolor{orangeUPMC}{[#1]}}

%%% no navigation symbols
\setbeamertemplate{navigation symbols}{}
