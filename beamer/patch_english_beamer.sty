
\usepackage{patch_english}

%%% pour afficher sections et sous-sections
\AtBeginSection[]
{
  \begin{frame}<beamer>
    \frametitle{Outline}
    \tableofcontents[currentsection]
  \end{frame}
}
\AtBeginSubsection[]
{
  \begin{frame}<beamer>
    \frametitle{Outline}
    \tableofcontents[currentsection,currentsubsection]
  \end{frame}
}

	%%% SLIDEPLAN
\newcommand{\slideplan}{\slide{Outline}{\tableofcontents}}



