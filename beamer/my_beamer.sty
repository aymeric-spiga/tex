	%% TWICEIMAGE : comme IMAGE mais taille deux fois plus grande
	\usepackage{calc}
	\newcommand{\twiceimage}[3]{
		\setlength{\columnwidth}{\columnwidth + \columnwidth}
		\setlength{\paperheight}{\paperheight + \paperheight}
                \begin{figure} \includegraphics[width=#1\columnwidth, height=#2\paperheight]{#3} \end{figure}
	}
        %% ETIRE : multiplie juste la hauteur par deux
	\newcommand{\etire}[3]{
                \setlength{\columnwidth}{0.9\columnwidth}
		\setlength{\paperheight}{\paperheight + 0.75\paperheight}
                \begin{figure} \includegraphics[width=#1\columnwidth, height=#2\paperheight]{#3} \end{figure}
	}
        %% ETIRETWICE
	\newcommand{\etiretwice}[3]{
                \setlength{\columnwidth}{\columnwidth + \columnwidth}
		\setlength{\paperheight}{\paperheight + 2.5\paperheight}
                \begin{figure} \includegraphics[width=#1\columnwidth, height=#2\paperheight]{#3} \end{figure}
	}
	%% REDEFINE FIGSUP coming from mylatex.sty
	\renewcommand{\figsup}[6]{\doublecol{0.5}{\twiceimage{#1}{#2}{#3}}{0.5}{\twiceimage{#1}{#2}{#4}}\note{\scriptsize#5}\label{#6}}
        \renewcommand{\figun}[5]{\etire{#1}{#2}{#3}\note{\scriptsize#4}\label{#5}}
        \renewcommand{\figside}[5]{\etire{#1}{#2}{#3}\note{\scriptsize#4}\label{#5}}
